.header{
  background: #fff;
  .header-top{
    height 60px;
    line-height: 60px;
    padding:0 20px;
    text-align: right ;
    .loginout{
      margin-left:20px;
      color:#1DA57A;
    }
  }
  .breadcrumb{
    height:40px;
    line-height: 40px;
    padding:0 20px;
    border-top:1px solid #1DA57A;
    .breadcrumb_title{
      text-align: center;
      position: relative;
      font-size: 18px;
      &:after{
        position: absolute;
        content: "";
        bottom:-9px;
        left: 50%;
        transform: translateX(-50%);
        width:10px;
        height:10px;
        border-top:9px solid $colorM;
        border-left:12px solid transparent;
        border-right: 12px solid transparent;  
      }
    }
    .weather{
      text-align: right;
      .date{
        margin-right: 10px;
        vertical-align: middle;
      }
      .weather-img{
        img{
          height: 15px;
        }
      }
      .weather_detail{
        margin-left: 5px;
        vertical-align: middle;
      }
    }
  }  
}